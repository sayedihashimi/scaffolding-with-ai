@page "/components/pages/contacts/delete/{id:int}"
@using BlazorWebApp01.Models
@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation

<PageTitle>Delete Contact</PageTitle>

<h3>Delete Contact</h3>

@if (contact == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this contact?</strong>
    </div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@contact.Name</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@contact.Email</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@contact.Phone</dd>
    </dl>
    <button class="btn btn-danger" @onclick="DeleteContact">Delete</button>
    <a href="/components/pages/contacts/index" class="btn btn-secondary ms-2">Cancel</a>
}

@code {
    [Parameter]
    public int id { get; set; }
    private Contact? contact;

    protected override async Task OnInitializedAsync()
    {
        contact = await DbContext.Contacts.FindAsync(id);
    }

    private async Task DeleteContact()
    {
        if (contact != null)
        {
            DbContext.Contacts.Remove(contact);
            await DbContext.SaveChangesAsync();
            Navigation.NavigateTo("/components/pages/contacts/index");
        }
    }
}
