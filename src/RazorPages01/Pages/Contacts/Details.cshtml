@page "{id:int}"
@model RazorPages01.Pages.Contacts.DetailsModel
@{
    ViewData["Title"] = "Contact Details";
}

<h1>Contact Details</h1>
<div>
    <h4>Contact</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Contact?.Name</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Contact?.Email</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Contact?.Phone</dd>
    </dl>
</div>
<a asp-page="Index" class="btn btn-secondary">Back to List</a>
<a asp-page="Edit" asp-route-id="@Model.Contact?.Id" class="btn btn-primary">Edit</a>
<a asp-page="Delete" asp-route-id="@Model.Contact?.Id" class="btn btn-danger">Delete</a>
