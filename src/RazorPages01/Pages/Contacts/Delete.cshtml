@page "{id:int}"
@model RazorPages01.Pages.Contacts.DeleteModel
@{
    ViewData["Title"] = "Delete Contact";
}

<h1>Delete Contact</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Contact</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Contact?.Name</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Contact?.Email</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Contact?.Phone</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Contact.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
